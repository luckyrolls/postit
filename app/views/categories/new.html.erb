<%= render 'shared/content_heading', title: "New Category" %>
<%= render 'shared/errors', obj: @category %>

<div class="well">
  <%= form_for @category do |f| %>

      <div class='control-group'>
        <%= f.label :name %>
        <%= f.text_field :name %><br />
      </div>

      <%= f.submit "Create", class: 'btn btn-primary' %>
  <% end %>

</div>